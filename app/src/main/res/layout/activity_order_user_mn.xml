<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderUserMnActivity"
    android:background="@color/White">

        <TextView
            android:id="@+id/text_actionbar_oder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/Primary"
            android:gravity="center_vertical"
            android:text=" Đơn Hàng"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rela"
            android:layout_below="@+id/text_actionbar_oder"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/White">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_order_hinhanh"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_1" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Mã sản phẩm"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_masp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Tên"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Giá"
                    android:textColor="@color/Black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/txt_order_gia"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Số lượng"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_soluong"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Mã giảm"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_giam"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Thành tiền"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_thanhtien"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Ngày đặt"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_ngaydat"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Ngày nhận"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_ngaynhan"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Trạng thái"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_trangthai"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Thanh toán"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_thanhtoan"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Đánh giá"
                    android:textColor="@color/Black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_order_danhgia"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </LinearLayout>
        </ScrollView>

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/txt_del_um_tinhtrangthanhtoan"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textView22"
            android:text="TextView"
            android:textSize="17dp"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/btn_del_um_thanhtoan"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView22"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Thanh toan"
            android:textAllCaps="false"
            android:background="@drawable/bovien1234blue"/>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:text="Tinh trang thanh toan"
            android:textSize="17dp"
            android:gravity="center_vertical"
            android:textColor="@color/Black"/>

        <Button
            android:id="@+id/btn_user_um_luu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/radioG"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bovien1234blue"
            android:text="Lưu"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/btn_del_um_thanhtoan"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Trạng thái"
            android:gravity="center_vertical"
            android:textColor="@color/Black"
            android:textSize="17dp" />

        <RadioGroup
            android:id="@+id/radioG"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView20"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdb_um_xacnhan"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Xác Nhận" />

            <RadioButton
                android:id="@+id/rdb_um_danggiao"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Đang Giao" />

            <RadioButton
                android:id="@+id/rdb_um_hoanthanh"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Hoàn Thành" />

            <RadioButton
                android:id="@+id/rdb_um_huy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy" />
        </RadioGroup>

    </RelativeLayout>
</RelativeLayout>