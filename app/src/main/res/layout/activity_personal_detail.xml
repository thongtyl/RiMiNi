<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary">

    <TextView
        android:id="@+id/text_actionbar_personal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text=" Thông Tin Chi Tiết"
        android:textColor="@color/White"
        android:gravity="center"
        android:background="@color/Primary"
        android:textSize="20dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/RL_personal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_actionbar_personal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/White">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:text="Cá nhân"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:text="Họ và tên"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txt_del_per_ten"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:text="Họ và tên"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView71"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:text="Số điện thoại"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txt_del_per_sdt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:text="Số điện thoại"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:text="Ngày sinh"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txt_del_per_ngaysinh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:text="Ngày sinh"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:gravity="center_vertical"
            android:text="Giới tính"
            android:textColor="@color/Black"
            android:textSize="15dp" />

        <RadioGroup
            android:id="@+id/rdggioitinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp">

            <RadioButton
                android:id="@+id/rdb_nam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nam"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rdb_nu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nữ" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_del_per_luu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/rdggioitinh"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bovien1234blue"
            android:gravity="center"
            android:text="Lưu thay đổi"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>