<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detailactivity"
    android:background="@color/Gray">

    <RelativeLayout
        android:id="@+id/RL_logo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/Primary">

        <TextView
            android:id="@+id/text_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/image_logo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/imageButton_cart"
            android:background="@drawable/bovien1234"
            android:drawableLeft="@drawable/icons8search20"
            android:gravity="center_vertical"
            android:hint="  Bạn tìm gì hôm nay..."
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/imageButton_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_cart" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/RL_logo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/White">

                <ImageView
                    android:id="@+id/image_del_product"
                    android:layout_width="match_parent"
                    android:layout_height="412dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_1" />

                <Button
                    android:id="@+id/button_mua"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/image_del_product"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bovien1234blue"
                    android:gravity="center"
                    android:text="Thêm vào giỏ hàng"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:background="@color/White">

                <RelativeLayout
                    android:id="@+id/rl1111"
                    android:layout_width="match_parent"
                    android:layout_height="30.5dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/Gray">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:gravity="center"
                        android:text="Thông tin chi tiết"
                        android:textColor="@color/Black"
                        android:textSize="17dp"
                        android:background="@color/White"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView356"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/rl1111"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Tên Sản Phẩm"
                    android:textColor="@color/Black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView354"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView356"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Giá"
                    android:textColor="@color/Black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView354"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Thương hiệu"
                    android:textColor="@color/Black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:text="Kích thước"
                    android:textColor="@color/Black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/Black"
                    android:text="Mã sản phẩm"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_del_ten"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/rl1111"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/textView356"
                    android:gravity="center_vertical"
                    android:text="Name"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_del_gia"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_del_ten"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/textView354"
                    android:gravity="center_vertical"
                    android:text="Price"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txt_del_thuonghieu"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_del_gia"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/textView3"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_del_kichthuoc"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_del_thuonghieu"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/textView4"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_del_masp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/txt_del_kichthuoc"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@+id/textView5"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/White">

                <RelativeLayout
                    android:id="@+id/rl11112222"
                    android:layout_width="match_parent"
                    android:layout_height="30.5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/Gray">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:gravity="center"
                        android:text="Mô tả sản phẩm"
                        android:textColor="@color/Black"
                        android:textSize="17dp"
                        android:background="@color/White"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl11112222"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/White">

                    <TextView
                        android:id="@+id/txt_del_mota"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="25dp"
                        android:text="Mô tả sản phẩm"
                        android:textSize="15dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="@color/White">

                <RelativeLayout
                    android:id="@+id/rl111122223333"
                    android:layout_width="match_parent"
                    android:layout_height="30.5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/Gray">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:gravity="center"
                        android:text="Khách hàng đánh giá"
                        android:textColor="@color/Black"
                        android:textSize="17dp"
                        android:background="@color/White"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl111122223333"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/Gray"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>